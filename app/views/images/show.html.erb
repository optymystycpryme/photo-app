<div class="image-pages">
  <%- model_class = Image -%>
  <div class="page-header">
    <h1><%= @image.name %></h1>
  </div>
  <div class="card col-6-lg image-show-card">
    <div class="btn-group image-btn-group">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                        images_path, class: 'btn btn-dark btn-back'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_image_path(@image), class: 'btn btn-edit btn-md' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        image_path(@image),
                        :method => 'delete',
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        class: 'btn btn-destroy btn-md' %>
    </div>
    <%= image_tag(@image.picture.url, class: 'show-image') if @image.picture %>
  </div>
</div>
