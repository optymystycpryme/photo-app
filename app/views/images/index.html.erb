<div class="image-pages">
  <%- model_class = Image -%>
  <div class="page-header">
    <h1>Your Images</h1>
    <%= link_to 'Add a new image', new_image_path, class: 'btn btn-primary btn-block' %>
  </div>
  <br>
  <div class="row sortable">
    <% @images.each do |image| %>
    <div class="card col-lg-4 col-md-6 col-sm-6 col-xs-12 image-card">
      <p class="image-index-title"><%= link_to image.name, image_path(image), class: "card-title" %></p>
      <%= image_tag image.picture.url, class: "card-img-top index-card-image" %>
      <hr>
      <div class="btn-group image-btn-group">
        <%= link_to t('.show', :default => t("helpers.links.show")),
                      image_path(image), class: 'btn btn-show btn-xs' %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_image_path(image), class: 'btn btn-edit btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      image_path(image),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      class: 'btn btn-xs btn-destroy' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
